{
	"name": "df_raw_covid_reporting",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_raw_covid_reporting",
						"type": "DatasetReference"
					},
					"name": "rawinput"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "rowfilter"
				},
				{
					"name": "selectonlycolumns"
				},
				{
					"name": "pivotcount"
				}
			],
			"scriptLines": [
				"source(output(",
				"          country as string,",
				"          country_code as string,",
				"          continent as string,",
				"          population as integer,",
				"          indicator as string,",
				"          daily_count as integer,",
				"          date as date,",
				"          rate_14_day as double,",
				"          source as string",
				"     ),",
				"     allowSchemaDrift: false,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> rawinput",
				"rawinput filter(continent =='Europe' && not(isNull(country_code))) ~> rowfilter",
				"rowfilter select(mapColumn(",
				"          country,",
				"          country_code,",
				"          population,",
				"          indicator,",
				"          daily_count,",
				"          source,",
				"          each(match(name == 'date'),",
				"               'reporting_' + 'date' = $$)",
				"     ),",
				"     skipDuplicateMapInputs: false,",
				"     skipDuplicateMapOutputs: false) ~> selectonlycolumns",
				"selectonlycolumns pivot(groupBy(country,",
				"          country_code,",
				"          population,",
				"          source,",
				"          reporting_date),",
				"     pivotBy(indicator, ['confirmed cases', 'deaths']),",
				"     count = sum(daily_count),",
				"     columnNaming: '$V_$N',",
				"     lateral: true) ~> pivotcount"
			]
		}
	}
}